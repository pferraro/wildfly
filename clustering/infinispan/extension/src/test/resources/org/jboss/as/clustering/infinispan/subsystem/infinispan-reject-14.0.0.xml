<subsystem xmlns="urn:jboss:domain:infinispan:15.0">
    <cache-container name="partition-handling">
        <transport channel="maximal-channel"/>
        <replicated-cache name="repl">
            <partition-handling merge-policy="REMOVE_ALL"/>
        </replicated-cache>
        <distributed-cache name="dist">
            <partition-handling when-split="ALLOW_READS"/>
        </distributed-cache>
    </cache-container>
    <cache-container name="marshaller" marshaller="JBOSS"/>
    <remote-cache-container name="marshaller" default-remote-cluster="foo" marshaller="PROTOSTREAM" modules="org.infinispan" protocol-version="2.9">
        <remote-clusters>
            <remote-cluster name="foo" socket-bindings="jdg1 jdg2 jdg3" domain="foo"/>
        </remote-clusters>
    </remote-cache-container>
</subsystem>
